{
  "name": "artipub",
  "version": "1.0.4",
  "description": "A library for processing and publishing articles",
  "author": "Potter<aa4790139@gmail.com>",
  "homepage": "https://artipub.github.io/artipub/",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/artipub/artipub.git"
  },
  "bugs": {
    "url": "https://github.com/artipub/artipub/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "lint": "eslint . && prettier -c .",
    "lint:fix": "eslint . --fix && prettier -w .",
    "dev": "pnpm -F=playground dev",
    "build": "pnpm --filter=./packages/* run build",
    "docs:dev": "pnpm -F=docs docs:dev",
    "docs:build": "pnpm -F=docs docs:build",
    "docs:preview": "pnpm -F=docs docs:preview",
    "docs:lunaria:build": "pnpm -F=docs lunaria:build",
    "clean": "pnpm --filter=./packages/* run clean",
    "release": "tsx scripts/release.ts",
    "prepare": "husky"
  },
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    "require": "./dist/index.cjs",
    "import": "./dist/index.js"
  },
  "files": [
    "dist",
    "README_zh-CN.md",
    "package.json"
  ],
  "keywords": [
    "typescript",
    "node",
    "notion",
    "dev.to",
    "process",
    "article",
    "publish",
    "flow"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{ts}": [
      "pnpm lint:fix",
      "git add ."
    ]
  },
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@types/node": "^20.14.2",
    "changelogen": "^0.5.5",
    "commander": "^12.1.0",
    "eslint": "^9.7.0",
    "eslint-config-unjs": "^0.3.2",
    "execa": "^9.3.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.7",
    "picocolors": "^1.0.1",
    "prettier": "^3.2.5",
    "prompts": "^2.4.2",
    "semver": "^7.6.3",
    "typescript": "^5.4.5"
  },
  "packageManager": "pnpm@9.6.0+sha512.38dc6fba8dba35b39340b9700112c2fe1e12f10b17134715a4aa98ccf7bb035e76fd981cf0bb384dfa98f8d6af5481c2bef2f4266a24bfa20c34eb7147ce0b5e"
}
