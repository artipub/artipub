{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ESNext"],
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "allowImportingTsExtensions": false,
    "preserveSymlinks": true,
    "baseUrl": "./src",
    "paths": {
      "types/*": ["./node_modules/@types/*"]
    }
  },
  "include": ["src/**/*", "tests/**/*", "tsconfig.json", "rollup.config.ts"],
  "exclude": ["dist"]
}
